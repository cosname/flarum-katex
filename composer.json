{
    "name": "cosname/flarum-katex",
    "description": "Flarum plugin to render LaTeX expressions using KaTeX.",
    "keywords": ["latex", "math", "expressions", "katex"],
    "type": "flarum-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Yixuan Qiu",
            "email": "yixuan.qiu@cos.name"
        }
    ],
    "require": {
        "flarum/core": "^0.1.0-beta.6"
    },
    "autoload": {
        "psr-4": {
            "Cosname\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "KaTeX",
            "icon": {
                "image": "icon.png",
                "backgroundSize": "contain",
                "backgroundRepeat": "no-repeat",
                "backgroundPosition": "center",
                "backgroundColor": "#ddd",
                "color": "#fff"
            }
        }
    }
}
